<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cdu.jaav.dao.DeskDao">

    <resultMap type="cdu.jaav.entity.Desk" id="DeskMap">
        <result property="dId" column="d_id" jdbcType="INTEGER"/>
        <result property="rId" column="r_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DeskMap">
        select
          d_id, r_id, status
        from library.desk
        where d_id = #{dId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DeskMap">
        select
          d_id, r_id, status
        from library.desk
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DeskMap">
        select
        d_id, r_id, status
        from library.desk
        <where>
            <if test="dId != null">
                and d_id = #{dId}
            </if>
            <if test="rId != null">
                and r_id = #{rId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="dId" useGeneratedKeys="true">
        insert into library.desk(r_id, status)
        values (#{rId}, #{status})
    </insert>

    <insert id="insertBatch" keyProperty="dId" useGeneratedKeys="true">
        insert into library.desk(r_id, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rId}, #{entity.status})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="dId" useGeneratedKeys="true">
        insert into library.desk(r_id, status)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.rId}, #{entity.status})
        </foreach>
        on duplicate key update
        r_id = values(r_id) , status = values(status)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.desk
        <set>
            <if test="rId != null">
                r_id = #{rId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where d_id = #{dId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.desk where d_id = #{dId}
    </delete>

</mapper>