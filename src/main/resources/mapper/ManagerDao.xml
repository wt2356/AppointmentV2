<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cdu.jaav.dao.ManagerDao">

    <resultMap type="cdu.jaav.entity.Manager" id="ManagerMap">
        <result property="mId" column="m_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="tel" column="tel" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ManagerMap">
        select
          m_id, name, tel
        from library.manager
        where m_id = #{mId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ManagerMap">
        select
          m_id, name, tel
        from library.manager
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ManagerMap">
        select
        m_id, name, tel
        from library.manager
        <where>
            <if test="mId != null">
                and m_id = #{mId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="tel != null">
                and tel = #{tel}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="mId" useGeneratedKeys="true">
        insert into library.manager(name, tel)
        values (#{name}, #{tel})
    </insert>

    <insert id="insertBatch" keyProperty="mId" useGeneratedKeys="true">
        insert into library.manager(name, tel)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tel})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="mId" useGeneratedKeys="true">
        insert into library.manager(name, tel)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.tel})
        </foreach>
        on duplicate key update
        name = values(name) , tel = values(tel)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.manager
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
        </set>
        where m_id = #{mId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.manager where m_id = #{mId}
    </delete>

</mapper>